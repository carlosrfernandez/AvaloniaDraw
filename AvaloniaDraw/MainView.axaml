<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolbox="clr-namespace:AvaloniaDraw.Toolbox"
             xmlns:avaloniaDraw="clr-namespace:AvaloniaDraw"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="avaloniaDraw:MainViewViewModel"
             x:Class="AvaloniaDraw.MainView">
    
    <DockPanel>
        <toolbox:ToolboxPanel DockPanel.Dock="Left" DataContext="{Binding ToolboxPanel}" />
        <avaloniaDraw:DrawingCanvas DataContext="{Binding DrawingCanvas}" />
    </DockPanel>
</UserControl>
